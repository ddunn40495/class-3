<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('partials/head.ejs') %>
  </head>
  <body style="text-align: center;">
    <h1>Edit a Pok√©mon!</h1>
    <!-- form -->
    <form action="/pokemon/<%=index%>?_method=PUT" method="POST">
      <!-- name -->
      <label for="name">NAME:</label>
      <input type="text" name="name" value="<%=data.name%>" /><br />
      <!-- image -->
      <label for="img">IMAGE:</label>
      <input type="text" name="img" value="<%=data.img%>" /><br />

      <!-- types -->
      <!-- this will look at the piece of data passed into the edit route/edit.ejs and loop through each of the types and create a label and input for each type in the data (so if there is one type there will only be one input if there are two types there will be 2 input fields) -->
      <% data.type.forEach((type, i) => { %>
        <label for="type">TYPE <%=i + 1%>:</label>
        <input type="text" name="type" value="<%=type%>" /><br />
      <% }) %>
      <!-- stats -->
      <!-- This will do the same thing as above but for the stats instead of the types -->
      <% for(let stat in data.stats) { %>
        <label for="<%=stat%>"><%=stat.toUpperCase()%></label>
        <input type="text" name="<%=stat%>" value="<%=data.stats[stat]%>">
      <% } %>
      <br/>
      <!-- submit button -->
      <input type="submit" />
    </form>
    <!-- nav -->
    <a href="/pokemon">Back to Pokedex</a>
  </body>
</html>
